{
  "manifest_version": 3,
  "name": "Unwavering Focus",
  "version": "1.0.0",
  "description": "Maximize productivity, eliminate digital distractions, and cultivate disciplined focus",
  "icons": {
    "16": "assets/icon.svg",
    "32": "assets/icon.svg",
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Unwavering Focus",
    "default_icon": {
      "16": "assets/icon.svg",
      "32": "assets/icon.svg",
      "48": "assets/icon.svg",
      "128": "assets/icon.svg"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["focus-page.html", "sounds/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "open-smart-search": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Open Smart Search Management"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 